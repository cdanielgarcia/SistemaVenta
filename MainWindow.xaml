<Window x:Class="SistemaVenta.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaVenta"
        xmlns:vm="clr-namespace:SistemaVenta.ViewModel"
        mc:Ignorable="d"
        Title="Iniciar Sesión" Height="450" Width="556"
        AllowsTransparency="True" WindowStyle="None"
        Background="Transparent" WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.DataContext>
        <vm:IniciarSesionVM/>
    </Window.DataContext>


    <Grid Margin="0,0,0,61">
        <Border CornerRadius="0,100,0,100">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Padding="10" Grid.Row="0" Text="SISTEMA VENTAS"
                           FontSize="15" FontWeight="Bold"
                           TextAlignment="Center" />
                <Border Grid.Row="1" CornerRadius="0,60,0,60">
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Image Source="pack://application:,,,/Imagenes/logo.png" Height="100" Stretch="Uniform" Margin="114,10,112,0" Grid.ColumnSpan="2"/>
                        <TextBlock Grid.Row="1" FontSize="15"
                                   FontFamily="Segoe Print" Foreground="Black"
                                   Margin="15"><Run Language="es-es" Text="Correo:"/></TextBlock>
                        <TextBlock Text="Contraseña" Grid.Row="2" FontSize="15"
                                   FontFamily="Segoe Print" Foreground="Black"
                                   Margin="15"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Margin="15" Text="{Binding Usuario.Correo, UpdateSourceTrigger=PropertyChanged}" 
                                 Name="txtUsuario"/>
                        <PasswordBox Grid.Row="2" Grid.Column="1" Margin="15" Name="txtPassword"/>
                        <TextBox Grid.Row="4" Grid.Column="0" Margin="15" Text="{Binding Usuario.Clave, UpdateSourceTrigger=PropertyChanged}"
                                 Name="txtSetPassword" IsEnabled="False" Visibility="Hidden"/>
                        <TextBox Grid.Row="3" Grid.Column="0" Margin="15,51,15,-11" Text="{Binding Usuario.Estado, UpdateSourceTrigger=PropertyChanged}"
                                 Name="txtIsOK" IsEnabled="False" TextChanged="txtIsOK_TextChanged" Visibility="Hidden"/>
                        <Grid Grid.Row="3" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Button Content="Iniciar Sesión" Padding="5" Margin="131,15,224,15" Grid.ColumnSpan="2" 
                                    Click="Ingresar_login" Command="{Binding cmd_Consultar}"/>
                            <Button Grid.Column="1" Content="Salir" Margin="76,15,15,15" 
                                    Click="LogIn_salir"/>
                        </Grid>
                    </Grid>
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,0" >
                            <GradientStop Color="AntiqueWhite" />
                            <GradientStop Color="Goldenrod" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <TextBlock Padding="10" Grid.Row="2" Text="V2022"
                           TextAlignment="Center"/>
            </Grid>
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" >
                    <GradientStop Color="LemonChiffon" />
                    <GradientStop Color="DarkGoldenrod" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
    </Grid>
</Window>

